<?xml version="1.0"?>

<PropertyList>
    <title>In Air Engine Restart</title>
    <item>
        <name>Throttle</name>
        <value>GROUND IDLE (PG Down)</value>
        <marker>
            <x-m>-3.6000</x-m>
            <y-m>-0.4587</y-m>
            <z-m>0.0959</z-m>
            <scale>7.0000</scale>
        </marker>
        <condition>
            <and>
                <greater-than-equals>
                    <property>/fdm/jsbsim/fcs/throttle-pos-deg</property>
                    <value>15</value>
                </greater-than-equals>
                <less-than>
                    <property>/fdm/jsbsim/fcs/throttle-pos-deg</property>
                    <value>20</value>
                </less-than>
            </and>
        </condition>
        <binding>
            <command>property-assign</command>
            <property>/controls/engines/engine[0]/throttle</property>
            <value>0.125</value>
        </binding>
    </item>
    <item>
        <name>Descend below 12km(40000ft)</name>
        <value></value>
    </item>
    <!-- Real checklist: press engine restart button 2s, does not exist on this model -->
    <item>
        <name>Below 11km(36000ft), fuel regulation</name>
        <value>MANUAL</value>
        <marker>
            <x-m>-3.75</x-m>
            <y-m>0.43</y-m>
            <z-m>0.235</z-m>
            <scale>1.0000</scale>
        </marker>
        <condition>
            <not><property>controls/fuel/auto</property></not>
        </condition>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/auto</property>
            <value>0</value>
        </binding>
        <binding>
            <command>nasal</command>
            <script>ja37.click();</script>
        </binding>
    </item>
    <item>
        <name>If no RPM or EGT increase in 20s, hold engine starter (2 sec)</name>
        <value>ON</value>
        <marker>
            <x-m>-3.7322</x-m>
            <y-m>-0.4727</y-m>
            <z-m>0.1116</z-m>
            <scale>3.0000</scale>
        </marker>
        <condition>
            <property>fdm/jsbsim/systems/electrical/starter-relay-R1</property>
        </condition>
        <binding>
            <command>nasal</command>
            <script>
              setprop("controls/engines/engine[0]/starter-cmd-hold", 1);
              setprop("controls/engines/engine[0]/starter-cmd", 1);
              ja37.click();
              var timer = maketimer(2.1, func(){
                  setprop("controls/engines/engine[0]/starter-cmd-hold", 0);
              });
              timer.singleShot = 1;
              timer.simulatedTime = 1;
              timer.start();
            </script>
        </binding>
    </item>
    <item>
        <name>Fly gently, land as soon as possible</name>
        <value></value>
    </item>
</PropertyList>
