            <property>/controls/engines/engine/throttle-cutoff</property>
        </condition>
        <binding>
            <command>property-assign</command>
            <property>/controls/engines/engine/throttle</property>
            <value>0</value>
        </binding>
        <binding>
            <command>property-assign</command>
            <property>/controls/engines/engine/throttle-cutoff</property>
            <value>1</value>
        </binding>
    </item>
