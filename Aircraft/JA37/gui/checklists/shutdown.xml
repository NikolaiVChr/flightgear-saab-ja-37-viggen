<?xml version="1.0"?>

<PropertyList>
    <title>Shut down</title>
    <item>
        <name>Auto throttle</name>
        <value>OFF</value>
        <marker>
            <x-m>-3.1500</x-m>
            <y-m>-0.4300</y-m>
            <z-m>0.0400</z-m>
            <scale>3</scale>
        </marker>
        <condition>
            <equals>
                <property>/fdm/jsbsim/autoflight/athr-pos</property>
                <value>0</value>
            </equals>
        </condition>
        <binding>
            <command>property-assign</command>
            <property>/fdm/jsbsim/autoflight/athr-cmd</property>
            <value>0</value>
        </binding>
    </item>
    <item>
        <name>Generator</name>
        <value>OFF</value>
        <marker>
            <x-m>-3.7223</x-m>
            <y-m>-0.4240</y-m>
            <z-m>0.1050</z-m>
            <scale>3.0000</scale>
        </marker>
        <condition>
            <not><property>controls/electric/engine[0]/generator</property></not>
        </condition>
        <binding>
            <command>property-assign</command>
            <property>controls/electric/engine[0]/generator</property>
            <value>0</value>
        </binding>
        <binding>
            <command>nasal</command>
            <script>ja37.click();</script>
        </binding>
    </item>
    <item>
        <name>Throttle</name>
        <value>CUTOFF (1min &lt; flight idle)</value>
        <marker>
            <x-m>-3.6000</x-m>
            <y-m>-0.4587</y-m>
            <z-m>0.0959</z-m>
            <scale>7.0000</scale>
        </marker>
