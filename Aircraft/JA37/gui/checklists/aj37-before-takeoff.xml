<?xml version="1.0"?>

<PropertyList>
    <title>Before Takeoff</title>
    <item>
        <name>Transponder</name>
        <value>ON</value>
        <condition>
            <equals>
                <property>/instrumentation/transponder/inputs/knob-mode</property>
                <value>5</value>
            </equals>
        </condition>
        <binding>
            <command>property-assign</command>
            <property>/instrumentation/transponder/inputs/knob-mode</property>
            <value>5</value>
        </binding>
        <marker>
            <x-m>-3.4174</x-m>
            <y-m>0.2893</y-m>
            <z-m>-0.0099</z-m>
            <scale>1.0000</scale>
        </marker>
    </item>
    <item>
        <name>Aligned on runway</name>
    </item>
    <item>
        <name>Flight instruments, main and backup</name>
        <value>CHECK</value>
    </item>
    <item>
        <name>SPAK</name>
        <value>CHECK ON</value>
        <marker>
            <x-m>-4.0400</x-m>
            <y-m>-0.2420</y-m>
            <z-m>0.4450</z-m>
            <scale>1.0000</scale>
        </marker>
        <condition>
            <property>fdm/jsbsim/autoflight/stick-light-cmd</property>
        </condition>
        <binding>
            <command>nasal</command>
            <script>
              setprop("ja37/avionics/button-stck", 1);
              autoflight.System.engageMode(1);
              ja37.click();
              var timer = maketimer(0.3, func(){
                  setprop("ja37/avionics/button-stck", 0);
              });
              timer.singleShot = 1;
              timer.simulatedTime = 1;
              timer.start();
            </script>
        </binding>
    </item>
    <item>
        <name>Master caution</name>
        <value>CHECK OFF</value>
        <marker>
            <x-m>-4.0446</x-m>
            <y-m>-0.1450</y-m>
            <z-m>0.4600</z-m>
            <scale>1.0000</scale>
        </marker>
        <condition>
            <equals>
                <property>fdm/jsbsim/systems/indicators/master-warning/warning</property>
                <value>0</value>
            </equals>
        </condition>
    </item>
    <item>
        <name>Warning lights</name>
        <value>CHECK OFF (X-Tank Fuel off at 70%rpm)</value>
    </item>
    <item>
        <name>HUD</name>
        <value>CHECK</value>
    </item>
    <item>
        <name>Landing lights</name>
        <value>ON</value>
        <marker>
            <x-m>-3.9</x-m>
            <y-m>-0.34</y-m>
            <z-m>0.29</z-m>
            <scale>1.1818</scale>
        </marker>
        <condition>
            <equals>
                <property>controls/electric/lights-land-switch</property>
                <value>1</value>
            </equals>
        </condition>
        <binding>
            <command>property-assign</command>
            <property>controls/electric/lights-land-switch</property>
            <value>1</value>
        </binding>
        <binding>
            <command>nasal</command>
            <script>ja37.click();</script>
        </binding>
    </item>
</PropertyList>
