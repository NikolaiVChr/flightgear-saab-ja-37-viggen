<?xml version="1.0"?>

<!-- JA37 Viggen Autopilot -->
<!-- Retuned and Overhauled -->
<!-- (c) 2017 Joshua Davidson (it0uchpods) -->

<PropertyList>

 <!-- =============================================================== -->
 <!-- Lateral  Modes                                                  -->
 <!-- =============================================================== -->

	<filter>
		<name>WINGS LEVEL</name>
		<type>gain</type>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>wing-leveler</value>
					</equals>
					<property>/ja37/avionics/temp-halt-ap-roll</property>
					<property>/ja37/avionics/temp-halt-ap-roll2</property>
				</and>
			</condition>
		</enable>
		<gain>0</gain>
		<input>0</input>
		<output>
			<property>/autopilot/internal/target-roll-deg</property>
		</output>
	</filter>

	<filter>
		<type>gain</type>
		<gain>1</gain>
		<input>/autopilot/internal/heading-bug-error-deg</input>
		<output>/autopilot/internal/heading-bug-error-deg-norm</output>
		<min>-30</min>
		<max>30</max>
	</filter>

	<pi-simple-controller>
		<name>HEADING MAGNETIC</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>dg-heading-hold</value>
					</equals>
					<property>/ja37/avionics/temp-halt-ap-roll</property>
					<property>/ja37/avionics/temp-halt-ap-roll2</property>
				</and>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/heading-bug-error-deg-norm</property>
		</input>
		<reference>
			<value>0.0</value>
		</reference>
		<output>
			<property>/autopilot/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>-4.0</Kp>
			<Ki>-0.000001</Ki>
			<min>
				<property>/fdm/jsbsim/autopilot/max-roll</property>
				<scale>-1</scale>
			</min>
			<max>
				<property>/fdm/jsbsim/autopilot/max-roll</property>
			</max>
		</config>
	</pi-simple-controller>
	
	<filter>
		<type>gain</type>
		<gain>1</gain>
		<input>/autopilot/internal/true-heading-error-deg</input>
		<output>/autopilot/internal/true-heading-error-deg-norm</output>
		<min>-30</min>
		<max>30</max>
	</filter>

	<pi-simple-controller>
		<name>HEADING TRUE</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>true-heading-hold</value>
					</equals>
					<property>/ja37/avionics/temp-halt-ap-roll</property>
					<property>/ja37/avionics/temp-halt-ap-roll2</property>
				</and>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/true-heading-error-deg-norm</property>
		</input>
		<reference>
			<value>0.0</value>
		</reference>
		<output>
			<property>/autopilot/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>-4.0</Kp>
			<Ki>-0.000001</Ki>
			<min>
				<property>/fdm/jsbsim/autopilot/max-roll</property>
				<scale>-1</scale>
			</min>
			<max>
				<property>/fdm/jsbsim/autopilot/max-roll</property>
			</max>
		</config>
	</pi-simple-controller>
	
	<filter>
		<type>gain</type>
		<gain>1</gain>
		<input>/autopilot/internal/nav1-heading-error-deg</input>
		<output>/autopilot/internal/nav1-heading-error-deg-norm</output>
		<min>-30</min>
		<max>30</max>
	</filter>
	
	<pi-simple-controller>
		<name>NAV1 TRK</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>nav1-hold</value>
					</equals>
					<property>/ja37/avionics/temp-halt-ap-roll</property>
					<property>/ja37/avionics/temp-halt-ap-roll2</property>
				</and>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/nav1-heading-error-deg-norm</property>
		</input>
		<reference>
			<value>0.0</value>
		</reference>
		<output>
			<property>/autopilot/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>-4.5</Kp>
			<Ki>-0.0001</Ki>
			<min>
				<property>/fdm/jsbsim/autopilot/max-roll</property>
				<scale>-1</scale>
			</min>
			<max>
				<property>/fdm/jsbsim/autopilot/max-roll</property>
			</max>
		</config>
	</pi-simple-controller>

	<filter>
		<name>ROLL DEG SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1</gain>
		<enable>
			<condition>
				<or>
					<and>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>wing-leveler</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-heading-hold</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-roll-hold</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>true-heading-hold</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>nav1-hold</value>
						</not-equals>
					</and>
					<equals>
						<property>/ja37/avionics/autopilot</property>
						<value>0</value>
					</equals>
					<not><property>/ja37/avionics/temp-halt-ap-roll</property></not>
					<not><property>/ja37/avionics/temp-halt-ap-roll2</property></not>
				</or>
			</condition>
		</enable>
		<input>/orientation/roll-deg</input>
		<output>/autopilot/internal/target-roll-deg</output>
		<min>
			<property>/fdm/jsbsim/autopilot/max-roll</property>
			<scale>-1</scale>
		</min>
		<max>
			<property>/fdm/jsbsim/autopilot/max-roll</property>
		</max>
	</filter>

	<filter>
		<name>IT-CONTROLLER: TARGET ROLL CMD</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>
			<property>/autopilot/internal/target-roll-deg</property>
		</input>
		<output>/autopilot/internal/target-roll</output>
		<type>noise-spike</type>
		<max-rate-of-change>
			<condition>
				<not-equals>
					<property>/autopilot/locks/heading</property>
					<value>dg-roll-hold</value>
				</not-equals>
			</condition>
			<value>8</value>
		</max-rate-of-change>
		<max-rate-of-change>
			<condition>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>dg-roll-hold</value>
				</equals>
			</condition>
			<value>10000</value>
		</max-rate-of-change>
	</filter>

	<filter>
		<name>System Command: Roll Rate</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>-2.0</gain>
		<enable>
			<condition>
				<and>
					<or>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>wing-leveler</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-heading-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-roll-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>true-heading-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>nav1-hold</value>
						</equals>
					</or>
					<equals>
						<property>/ja37/avionics/autopilot</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/orientation/roll-deg</property>
		</input>
		<reference>
			<condition>
				<and>
					<property>/ja37/avionics/temp-halt-ap-roll</property>
					<property>/ja37/avionics/temp-halt-ap-roll2</property>
				</and>
			</condition>
			<property>/autopilot/internal/target-roll</property>
		</reference>
		<reference>
			<condition>
				<or>
					<not><property>/ja37/avionics/temp-halt-ap-roll</property></not>
					<not><property>/ja37/avionics/temp-halt-ap-roll2</property></not>
				</or>
			</condition>
			<property>/orientation/roll-deg</property>
		</reference>
		<output>
			<property>/autopilot/internal/roll-rate</property>
		</output>   	
		<min>-25.0</min>
		<max>25.0</max>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: ROLL RATE KP (P Gain)</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/mach</property>
					<entry><ind>0.2</ind><dep>0.06</dep></entry>
					<entry><ind>1.0</ind><dep>0.04</dep></entry>
					<entry><ind>1.5</ind><dep>0.03</dep></entry>
					<entry><ind>2.1</ind><dep>0.02</dep></entry>
				</table>
			</expression>
		</input>
		<output>/autopilot/internal/kp-roll</output>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: ROLL FEEDBACK IF DISABLED</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<or>
					<and>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>wing-leveler</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-heading-hold</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-roll-hold</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>true-heading-hold</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>nav1-hold</value>
						</not-equals>
					</and>
					<not-equals>
						<property>/ja37/avionics/autopilot</property>
						<value>1</value>
					</not-equals>
					<not><property>/ja37/avionics/temp-halt-ap-roll</property></not>
					<not><property>/ja37/avionics/temp-halt-ap-roll2</property></not>
				</or>
			</condition>
		</enable>
		<input>
			<property>/controls/flight/aileron</property>
		</input>
		<output>
			<property>/controls/flight/aileron-ap</property>
		</output>   	
		<min>-0.7</min>
		<max>0.7</max>
	</filter>
	
	<pid-controller>
		<name>IT-CONTROLLER: ROLL</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<or>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>wing-leveler</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-heading-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-roll-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>true-heading-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>nav1-hold</value>
						</equals>
					</or>
					<equals>
						<property>/ja37/avionics/autopilot</property>
						<value>1</value>
					</equals>
					<property>/ja37/avionics/temp-halt-ap-roll</property>
					<property>/ja37/avionics/temp-halt-ap-roll2</property>
				</and>
			</condition>
		</enable>
		<input>
			<property>/orientation/roll-rate-degps</property>
		</input>
		<reference>
			<property>/autopilot/internal/roll-rate</property>
		</reference>
		<output>
			<property>/controls/flight/aileron-ap</property>
		</output>
		<config>
			<Kp>
				<property>/autopilot/internal/kp-roll</property>
			</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>0.45</Ti>
			<Td>0.0002</Td>
			<u_min>-0.7</u_min>
			<u_max>0.7</u_max>
		</config>
	</pid-controller>

 <!-- =============================================================== -->
 <!-- Vertical Modes                                                  -->
 <!-- =============================================================== -->

	<filter>
		<name>PITCH DEG SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1</gain>
		<enable>
			<condition>
				<or>
					<not-equals>
						<property>/autopilot/locks/altitude</property>
						<value>pitch-hold</value>
					</not-equals>
					<equals>
						<property>/ja37/avionics/autopilot</property>
						<value>0</value>
					</equals>
					<not><property>/ja37/avionics/temp-halt-ap-pitch</property></not>
				</or>
			</condition>
		</enable>
		<input>
			<expression>
				<div>
					<floor>
						<sum>
							<product>
								<property>/orientation/pitch-deg</property>
								<value>10</value>
							</product>
							<value>0.5</value>
						</sum>
					</floor>
					<value>10</value>
				</div>
			</expression>
		</input>
		<output>/autopilot/settings/target-pitch-deg</output>
		<min>-15</min>
		<max>30</max>
	</filter>
	
	<filter>
		<name>PITCH HOLD</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input>/autopilot/settings/target-pitch-deg</input>
		<output>/autopilot/internal/target-pitch-deg</output>
	</filter>
	
	<pid-controller>
		<name>AOA hold</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/altitude</property>
						<value>aoa-hold</value>
					</equals>
					<equals>
						<property>/ja37/avionics/autopilot</property>
						<value>1</value>
					</equals>
					<property>/ja37/avionics/temp-halt-ap-pitch</property>
				</and>
			</condition>
		</enable>
		<input>
			<property>/orientation/alpha-deg</property>
		</input>
		<reference>
			<property>/autopilot/settings/target-aoa-deg</property>
		</reference>
		<output>
			<property>/autopilot/internal/target-pitch-deg</property>
		</output>
		<config>
			<Kp>1.1</Kp>
			<beta>1.0</beta>
			<alpha>0.1</alpha>
			<gamma>0.0</gamma>
			<Ti>0.5</Ti>
			<Td>0.0001</Td>
			<u_min>-15</u_min>
			<u_max>30</u_max>
		</config>
	</pid-controller>
	
	<predict-simple>
		<name>ALTITUDE 2 SECONDS AHEAD</name>
		<debug>false</debug>
		<input>/instrumentation/altimeter/indicated-altitude-ft</input>
		<output>/autopilot/internal/altitude-2-sec-ahead</output>
		<seconds>2.0</seconds>
		<filter-gain>0.0</filter-gain>
	</predict-simple>
	
	<filter>
		<name>ALTITUDE CAPTURE/HOLD</name>
		<debug>false</debug>
		<type>gain</type>
		<input>
			<expression>
				<sum>
					<property>/autopilot/internal/altitude-2-sec-ahead</property>
					<value>-5</value>
				</sum>
			</expression>
		</input>
		<reference>
			<property>/autopilot/settings/target-altitude-ft</property>
		</reference>
		<gain>-3</gain>
		<output>
			<property>/autopilot/internal/target-fpm-alt</property>
		</output>
		<min>
			<property>/fdm/jsbsim/autopilot/descent</property>
			<scale>60</scale>
		</min>
		<max>
			<property>/fdm/jsbsim/autopilot/climb</property>
			<scale>60</scale>
		</max>
	</filter>
	
	<predict-simple>
		<name>AGL 2 SECONDS AHEAD</name>
		<debug>false</debug>
		<input>/position/altitude-agl-ft</input>
		<output>/autopilot/internal/agl-2-sec-ahead</output>
		<seconds>2.0</seconds>
		<filter-gain>0.0</filter-gain>
	</predict-simple>
	
	<filter>
		<name>AGL CAPTURE/HOLD</name>
		<debug>false</debug>
		<type>gain</type>
		<input>
			<expression>
				<sum>
					<property>/autopilot/internal/agl-2-sec-ahead</property>
					<value>-5</value>
				</sum>
			</expression>
		</input>
		<reference>
			<property>/autopilot/settings/target-agl-ft</property>
		</reference>
		<gain>-3</gain>
		<output>
			<property>/autopilot/internal/target-fpm-agl</property>
		</output>
		<min>
			<property>/fdm/jsbsim/autopilot/descent</property>
			<scale>60</scale>
		</min>
		<max>
			<property>/fdm/jsbsim/autopilot/climb</property>
			<scale>60</scale>
		</max>
	</filter>
	
	<filter>
		<name>NAV1 G/S FPM Calc</name>
		<debug>false</debug>
		<type>gain</type>
		<input>
			<property>/instrumentation/nav[0]/gs-rate-of-climb-fpm</property>
		</input>
		<output>/autopilot/internal/nav1-rate-of-climb-fpm</output>
		<gain>1.0</gain>
		<min>-2500</min>
		<max>0</max>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: FPM KP (P Gain)</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/mach</property>
					<entry><ind>0.2</ind><dep>0.0018</dep></entry>
					<entry><ind>1.4</ind><dep>0.0008</dep></entry>
				</table>
			</expression>
		</input>
		<output>/autopilot/internal/vs-kp</output>
	</filter>
	
	<pid-controller>
		<name>FPM HOLD</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<or>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>vertical-speed-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>altitude-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>agl-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>gs1-hold</value>
						</equals>
					</or>
					<equals>
						<property>/ja37/avionics/autopilot</property>
						<value>1</value>
					</equals>
					<property>/ja37/avionics/temp-halt-ap-pitch</property>
				</and>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/vert-speed-fpm</property>
		</input>
		<reference>
			<condition>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>vertical-speed-hold</value>
				</equals>
			</condition>
			<property>/autopilot/settings/vertical-speed-fpm</property>
		</reference>
		<reference>
			<condition>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>altitude-hold</value>
				</equals>
			</condition>
			<property>/autopilot/internal/target-fpm-alt</property>
		</reference>
		<reference>
			<condition>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>agl-hold</value>
				</equals>
			</condition>
			<property>/autopilot/internal/target-fpm-agl</property>
		</reference>
		<reference>
			<condition>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>gs1-hold</value>
				</equals>
			</condition>
			<property>/autopilot/internal/nav1-rate-of-climb-fpm</property>
		</reference>
		<output>
			<property>/autopilot/internal/target-pitch-deg</property>
		</output>
		<config>
			<Kp>
				<property>/autopilot/internal/vs-kp</property>
			</Kp>
			<Ti>2.5</Ti>
			<Td>0.0001</Td>
			<u_min>
				<condition>
					<and>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>0</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<value>-15</value>
			</u_min>
			<u_min>
				<condition>
					<or>
						<equals>
							<property>gear/gear[1]/wow</property>
