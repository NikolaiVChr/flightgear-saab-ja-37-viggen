<?xml version="1.0"?>
<PropertyList>

	<path>mi.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>backplate</object-name>
        <object-name>knob</object-name>
        <object-name>lowerplate</object-name>
        <object-name>button_1</object-name>
        <object-name>button_2</object-name>
        <object-name>button_3</object-name>
        <object-name>button_4</object-name>
        <object-name>button_a</object-name>
        <object-name>button_a</object-name>
        <object-name>button_b</object-name>
        <object-name>button_m1</object-name>
        <object-name>button_m2</object-name>
        <object-name>button_m3</object-name>
        <object-name>button_m4</object-name>
        <object-name>button_p1</object-name>
        <object-name>button_p2</object-name>
        <object-name>button_p3</object-name>
        <object-name>button_p4</object-name>
        <object-name>button_pek</object-name>
        <object-name>button_pi</object-name>
        <object-name>button_reg</object-name>
        <object-name>button_x1</object-name>
        <object-name>button_x2</object-name>
        <object-name>button_x3</object-name>
        <object-name>button_x4</object-name>
        <object-name>warninglighthousing</object-name>
    </effect>
    
    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-light</inherits-from>
        <object-name>warning_light</object-name>
        <object-name>indicator_upper_right</object-name>
        <object-name>indicator_upper_left</object-name>
        <object-name>indicator_tnf</object-name>
        <object-name>indicator_tls</object-name>
        <object-name>indicator_lower_right</object-name>
        <object-name>indicator_lower_left</object-name>
        <object-name>indicator_j</object-name>
        <object-name>indicator_ik</object-name>
        <object-name>indicator_id</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/displays/lcd</inherits-from>
        <parameters>
            <inner-angle type="float">88</inner-angle><!-- 0-90, use 90 for LED or plasma display-->
            <outer-angle type="float">89</outer-angle><!-- 0-90, but greater than inner -->
            <black-angle type="float">90</black-angle><!-- 0-90, but greater than outer -->
            <contrast type="float">1</contrast>
            <texture n="1">
                <type>2d</type>
                <filter>linear-mipmap-linear</filter>
                <wrap-s>clamp</wrap-s>
                <wrap-t>clamp</wrap-t>
                <internal-format>normalized</internal-format>
                <image>Aircraft/JA37/Models/Effects/displays/dust-effect-overlay2.png</image>
            </texture>
        </parameters>
        <object-name>screen</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>backplate</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>mi-display</tooltip-id>
                <label>MI display</label>
            </binding>
        </hovered>
    </animation>

  	<!--


							SCREEN


  	-->

    <animation>
        <type>material</type>
        <object-name>screen</object-name>
        <!--<condition>
            <equals>
              <property>/sim/rendering/rembrandt/enabled</property>
              <value>1</value>
            </equals>
        </condition>
        <ambient>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
            <factor-prop>ja37/avionics/brightness-ti</factor-prop>
        </ambient>
        <diffuse>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
            <factor-prop>ja37/avionics/brightness-ti</factor-prop>
        </diffuse>-->
        <emission>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
            <factor-prop>ja37/avionics/brightness-mi</factor-prop>
        </emission>
    </animation>

  	<!--


							KNOB


  	-->

  	<animation>
        <type>knob</type>
        <object-name>knob</object-name>
        <property>ja37/avionics/brightness-mi-knob</property>
        <factor>-240</factor>
        <center>
            <x-m>0</x-m>
            <y-m>-0.078031</y-m>
            <z-m>0.15023</z-m>
        </center>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>ja37/avionics/brightness-mi-knob</property>
                <factor>0.1</factor>
                <min>0.3</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>knob</tooltip-id>
                <label>MI: Brightness</label>
            </binding>
        </hovered>
    </animation>

    <!--


							INDICATORS


  	-->

	<animation>
	    <type>material</type>
	    <object-name>warning_light</object-name>
	    <emission>
	        <red>1.0</red>
	        <green>0.0</green>
	        <blue>0.0</blue>
	        <factor-prop>/instrumentation/terrain-warning-light</factor-prop>
	    </emission>
  	</animation>

  	<animation>
        <type>textranslate</type>
        <object-name>warning_light</object-name>
        <property>/instrumentation/terrain-warning-light</property>
        <factor>0.05</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>indicator_tls</object-name>
        <visible>true</visible>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>tls</tooltip-id>
                <label>TILS</label>
            </binding>
        </hovered>
    </animation>

    <animation>
	    <type>material</type>
	    <object-name>indicator_tls</object-name>
	    <condition>
	        <property>/instrumentation/TLS-light</property>
        </condition>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop> 
   			<green-prop>instrumentation/instrumentation-light/g</green-prop> 
   			<blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>systems/electrical/dc-light</factor-prop>
        </emission>
  	</animation>

  	<animation>
        <type>pick</type>
        <object-name>indicator_tnf</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>ja37/avionics/ins-cmd</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>tnf</tooltip-id>
                <label>Inertial navigation</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>indicator_lower_left</object-name>
        <object-name>indicator_upper_left</object-name>
        <object-name>indicator_lower_right</object-name>
        <object-name>indicator_upper_right</object-name>
        <visible>true</visible>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>rwr</tooltip-id>
                <label>Radar warning reciever indicator</label>
            </binding>
        </hovered>
    </animation>

    <animation>
	  <type>material</type> 
	  <object-name>indicator_upper_right</object-name>
	  <condition>
	    <equals>
	      <property>ja37/blink/four-Hz/state</property>
	      <value>1</value>
	    </equals>
	    <or>
	      <equals>
	        <property>instrumentation/rwr/ja-lights/sector[0]</property>
	        <value>1</value>
	      </equals>
	      <property>/controls/lighting/test-indicator-panels</property>
	    </or>
	  </condition>
	  <emission>
	   <red>1.0</red> 
	   <green>0.0</green> 
	   <blue>0.0</blue>
	   <factor-prop>systems/electrical/dc-light</factor-prop>
	  </emission>
	</animation>

	<animation>
	  <type>material</type> 
	  <object-name>indicator_lower_right</object-name>
	  <condition>
	    <equals>
	      <property>ja37/blink/four-Hz/state</property>
	      <value>1</value>
	    </equals>
	    <or>
	      <equals>
	        <property>instrumentation/rwr/ja-lights/sector[1]</property>
	        <value>1</value>
	      </equals>
	      <property>/controls/lighting/test-indicator-panels</property>
	    </or>
	  </condition>
	  <emission>
	   <red>1.0</red> 
	   <green>0.0</green> 
	   <blue>0.0</blue>
	   <factor-prop>systems/electrical/dc-light</factor-prop>
	  </emission>
	</animation>

	<animation>
	  <type>material</type> 
	  <object-name>indicator_lower_left</object-name>
	  <condition>
	    <equals>
	      <property>ja37/blink/four-Hz/state</property>
	      <value>1</value>
	    </equals>
	    <or>
	      <equals>
	        <property>instrumentation/rwr/ja-lights/sector[2]</property>
	        <value>1</value>
	      </equals>
	      <property>/controls/lighting/test-indicator-panels</property>
	    </or>
	  </condition>
	  <emission>
	   <red>1.0</red> 
	   <green>0.0</green> 
	   <blue>0.0</blue>
	   <factor-prop>systems/electrical/dc-light</factor-prop>
	  </emission>
	</animation>

	<animation>
	  <type>material</type> 
	  <object-name>indicator_upper_left</object-name>
	  <condition>
	    <equals>
	      <property>ja37/blink/four-Hz/state</property>
	      <value>1</value>
	    </equals>
	    <or>
	      <equals>
	        <property>instrumentation/rwr/ja-lights/sector[3]</property>
	        <value>1</value>
	      </equals>
	      <property>/controls/lighting/test-indicator-panels</property>
	    </or>
	  </condition>
	  <emission>
	   <red>1.0</red>
	   <green>0.0</green>
	   <blue>0.0</blue>
	   <factor-prop>systems/electrical/dc-light</factor-prop>
	  </emission>
	</animation>

    <animation>
        <type>pick</type>
        <object-name>indicator_ik</object-name>
        <visible>true</visible>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>ik</tooltip-id>
                <label>Identification</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>indicator_j</object-name>
        <visible>true</visible>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>j</tooltip-id>
                <label>Intercept</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>indicator_id</object-name>
        <visible>true</visible>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>id</tooltip-id>
                <label>Non-doppler mode</label>
            </binding>
        </hovered>
    </animation>

    <animation>
	    <type>material</type>
	    <object-name>indicator_j</object-name>
	    <object-name>indicator_ik</object-name>
	    <object-name>indicator_id</object-name>
	    <condition>
            <property>/controls/lighting/test-indicator-panels</property>
        </condition>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop> 
   			<green-prop>instrumentation/instrumentation-light/g</green-prop> 
   			<blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>systems/electrical/dc-light</factor-prop>
        </emission>
  	</animation>

    <animation>
	    <type>material</type>
	    <object-name>indicator_tnf</object-name>
	    <condition>
            <or>
                <and>
                    <property>ja37/avionics/ins</property>
                    <not>
                        <property>/controls/lighting/test-indicator-panels</property>
                    </not>
                </and>
                <and>
        	    	<or>
        	            <property>ja37/avionics/ins-init</property>
        	            <property>/controls/lighting/test-indicator-panels</property>
        	        </or>
                    <property>/ja37/blink/two-Hz/state</property>
                </and>
            </or>
        </condition>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop> 
   			<green-prop>instrumentation/instrumentation-light/g</green-prop> 
   			<blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>systems/electrical/dc-light</factor-prop>
        </emission>
  	</animation>

  	<!--


							BUTTONS


  	-->

  	<animation>
        <type>pick</type>
        <object-name>button_a</object-name>
        <visible>true</visible>
        <action>
            <name>increase zoom</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>TI.zoomOut();</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>a</tooltip-id>
                <label>TI: Zoom out</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button_b</object-name>
        <visible>true</visible>
        <action>
            <name>decrease zoom</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>TI.zoomIn();</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>b</tooltip-id>
                <label>TI: Zoom in</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button_pi</object-name>
        <visible>true</visible>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>jl</tooltip-id>
                <label>Fighter link</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button_pek</object-name>
        <action>
            <name>cursor</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>MI.cursor();</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>pek</tooltip-id>
                <label>MI/TI: Cursor</label>
            </binding>
        </hovered>
    </animation>

    <animation>
	    <type>material</type>
	    <object-name>button_pi</object-name>
	    <object-name>button_a</object-name>
	    <object-name>button_b</object-name>
	    <condition>
            <property>/controls/lighting/test-indicator-panels</property>
        </condition>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop> 
   			<green-prop>instrumentation/instrumentation-light/g</green-prop> 
   			<blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>systems/electrical/dc-light</factor-prop>
        </emission>
  	</animation>

    <animation>
	    <type>material</type>
	    <object-name>button_pek</object-name>
	    <condition>
	    	<or>
	            <property>ja37/avionics/cursor-on</property>
	            <property>/controls/lighting/test-indicator-panels</property>
	        </or>
        </condition>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop> 
   			<green-prop>instrumentation/instrumentation-light/g</green-prop> 
   			<blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>systems/electrical/dc-light</factor-prop>
        </emission>
  	</animation>

  	<animation>
	    <type>material</type>
	    <object-name>button_reg</object-name>
	    <condition>
	    	<or>
	            <property>ja37/avionics/record-on</property>
	            <property>/controls/lighting/test-indicator-panels</property>
	        </or>
        </condition>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop> 
   			<green-prop>instrumentation/instrumentation-light/g</green-prop> 
   			<blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>systems/electrical/dc-light</factor-prop>
        </emission>
  	</animation>

  	<animation>
        <type>pick</type>
        <object-name>button_reg</object-name>
        <!--<action>
            <name>record on/off</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>sim/replay/disable</property>
            </binding>
        </action>-->
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Reg</tooltip-id>
                <label>Recording Flight Tape</label>
            </binding>
        </hovered>
    </animation> 

    <animation>
        <type>pick</type>
        <object-name>button_p3</object-name>
        <visible>true</visible>
        <action>
            <name>help MI</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>MI.pressP3();</script>
            </binding>
            <mod-up>
	            <binding>
	                <command>nasal</command>
	                <script>MI.releaseP3();</script>
	            </binding>
	        </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>p3</tooltip-id>
                <label>MI help</label>
            </binding>
        </hovered>
    </animation> 

    <animation>
        <type>pick</type>
        <object-name>button_2</object-name>
        <visible>true</visible>
        <action>
            <name>SVY TI</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>MI.press2();</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button_x1</object-name>
        <visible>true</visible>
        <action>
            <name>BIT</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>MI.pressX1();</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button_x2</object-name>
        <visible>true</visible>
        <action>
            <name>LNK</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>MI.pressX2();</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button_x3</object-name>
        <visible>true</visible>
        <action>
            <name>HAN</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>MI.pressX3();</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button_m2</object-name>
        <visible>true</visible>
        <action>
            <name>ECM</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>MI.pressM2();</script>
            </binding>
        </action>
    </animation>

</PropertyList>
