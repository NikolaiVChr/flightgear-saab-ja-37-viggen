<?xml version="1.0"?>

<PropertyList>

    <path>button-g.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>button</object-name>
        <object-name>plate</object-name>
        <object-name>ring</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>plate</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>button-trim-reset</tooltip-id>
                <label>Reset trim</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>controls/flight/trim-reset</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/flight/elevator-trim</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/flight/aileron-trim</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/flight/rudder-trim</property>
                <value>0</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>controls/flight/trim-reset</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>button</object-name>
        <property>controls/flight/trim-reset</property>
        <factor>-0.0030</factor>
        <axis>
            <x> 0.0 </x>
            <y> 0.0 </y>
            <z> 1.0 </z>
        </axis>
    </animation>

    <animation>
        <type>material</type>
        <object-name>plate</object-name>
        <object-name>ring</object-name>
        <object-name>button</object-name>
        <property-base>sim/ja37/texture</property-base>
        <texture-prop>button-trim-reset</texture-prop>
        <texture>trim-reset.png</texture>
    </animation>

</PropertyList>
