<?xml version="1.0"?>

<PropertyList>

    <path>button-g.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>button</object-name>
        <object-name>plate</object-name>
        <object-name>ring</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>plate</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>button-flares</tooltip-id>
                <label>Release flares</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>/ai/submodels/submodel[0]/flare-release-cmd</property>
                <value type="bool">true</value>
            </binding>
            <!--<mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>/ai/submodels/submodel[0]/flare-release</property>
                    <value type="bool">false</value>
                </binding>
            </mod-up>-->
        </action>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>button</object-name>
        <property>/ai/submodels/submodel[0]/flare-release</property>
        <factor>-0.0030</factor>
        <axis>
            <x> 0.0 </x>
            <y> 0.0 </y>
            <z> 1.0 </z>
        </axis>
    </animation>

    <animation>
        <type>material</type>
        <object-name>plate</object-name>
        <object-name>ring</object-name>
        <object-name>button</object-name>
        <property-base>sim/ja37/texture</property-base>
        <texture-prop>button-flares</texture-prop>
        <texture>flares.png</texture>
    </animation>

</PropertyList>
