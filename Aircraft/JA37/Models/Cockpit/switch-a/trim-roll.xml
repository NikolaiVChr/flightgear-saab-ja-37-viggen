<?xml version="1.0"?>

<PropertyList>

    <path>switch-a.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>switchMount</object-name>
        <object-name>switchRed</object-name>
        <object-name>switchLever</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>switchMount</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>switch-lights-flash</tooltip-id>
                <label>Roll trim</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>pickTop</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>controls/flight/trim-roll</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>controls/flight/trim-roll</property>
                    <value>0</value>
                </binding>
            </mod-up>
            <binding>
                <command>nasal</command>
                <script>ja37.click();</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>pickBottom</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>controls/flight/trim-roll</property>
                <value>-1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>controls/flight/trim-roll</property>
                    <value>0</value>
                </binding>
            </mod-up>
            <binding>
                <command>nasal</command>
                <script>ja37.click();</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>switchLever</object-name>
        <property>controls/flight/trim-roll</property>
        <factor>20</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>  0.00 </x-m>
            <y-m>  0.00 </y-m>
            <z-m> -0.00608 </z-m>
        </center>
        <axis>
            <x>-1.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </axis>
    </animation>

    <animation>
        <type>material</type>
        <object-name>switchMount</object-name>
        <property-base>ja37/texture</property-base>
        <texture-prop>switch-light-flash</texture-prop>
        <texture>ROLL-TRIM.png</texture>
    </animation>

</PropertyList>
