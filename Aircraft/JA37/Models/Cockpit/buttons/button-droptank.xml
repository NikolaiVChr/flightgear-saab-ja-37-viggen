<?xml version="1.0"?>

<PropertyList>

    <path>button-red.ac</path>

    <animation>
        <type>pick</type>
        <object-name>Surface</object-name>
        <object-name>Ring</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>nasal</command>
                <script>ja37.drop();</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>button-droptank</tooltip-id>
                <label>Jettison drop-tank</label>
                <!--<property>/consumables/fuel/tank[8]/jettisoned</property>-->
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Text</object-name>
        <property-base>sim/ja37/texture</property-base>
        <texture-prop>button-droptank</texture-prop>
        <texture>button-droptank.png</texture>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Ring</object-name>
        <object-name>Text</object-name>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>
</PropertyList>
