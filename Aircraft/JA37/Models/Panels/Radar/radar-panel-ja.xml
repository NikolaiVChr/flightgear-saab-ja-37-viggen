<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

    <path>radar-panel.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>panel</object-name>
        <object-name>knob1</object-name>
        <object-name>knob2</object-name>
        <object-name>knob3</object-name>
        <object-name>btMid</object-name>
        <object-name>btLeft</object-name>
        <object-name>btHidden</object-name>
        <object-name>btBot</object-name>
        <object-name>cyl1</object-name>
        <object-name>cyl1</object-name>
        <object-name>cyl3</object-name>
        <object-name>head1</object-name>
        <object-name>head2</object-name>
        <object-name>head3</object-name>
        <object-name>switch1</object-name>
        <object-name>switch2</object-name>
        <object-name>bulge1</object-name>
        <object-name>bulge2</object-name>
        <object-name>shield</object-name>
        <object-name>shape</object-name>
        <object-name>foot1</object-name>
        <object-name>foot2</object-name>
    </effect>
    
    <animation>
        <type>material</type>
        <object-name>panel</object-name>
        <property-base>ja37/language</property-base>
        <texture-prop>textureRadarPanel</texture-prop>
        <texture>radar-panel.png</texture>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>panel</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>rdpn</tooltip-id>
                <label>Radar panel (not implemented)</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>knob1</object-name>
        <property>ja37/radar/panel/knob-1</property>
        <factor>32.5</factor>
        <offset-deg>-85</offset-deg>
        <center>
            <x-m>  -0.06954 </x-m>
            <y-m>   0.02677 </y-m>
            <z-m>  0 </z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>        
        <action>
            <binding>
                <command>property-adjust</command>
                <property>ja37/radar/panel/knob-1</property>
                <min>0</min>
                <max>4</max>                
                <wrap>false</wrap>
           </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>btBot</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>ja37/radar/panel/button-b</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>ja37/radar/panel/button-b</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    <animation>
       <type>translate</type>
       <object-name>btBot</object-name>
       <property>ja37/radar/panel/button-b</property>
       <factor>0.004</factor>
       <offset-m>0</offset-m>
       <axis>
         <z>-1</z>
       </axis>
       <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>btMid</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>ja37/radar/panel/button-m</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>ja37/radar/panel/button-m</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    <animation>
       <type>translate</type>
       <object-name>btMid</object-name>
       <property>ja37/radar/panel/button-m</property>
       <factor>0.004</factor>
       <offset-m>0</offset-m>
       <axis>
         <z>-1</z>
       </axis>
       <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>btHidden</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>ja37/radar/panel/button-h</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>ja37/radar/panel/button-h</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    <animation>
       <type>translate</type>
       <object-name>btHidden</object-name>
       <property>ja37/radar/panel/button-h</property>
       <factor>0.004</factor>
       <offset-m>0</offset-m>
       <axis>
         <z>-1</z>
       </axis>
       <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>btLeft</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>ja37/radar/panel/button-l</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>ja37/radar/panel/button-l</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    <animation>
       <type>translate</type>
       <object-name>btLeft</object-name>
       <property>ja37/radar/panel/button-l</property>
       <factor>0.004</factor>
       <offset-m>0</offset-m>
       <axis>
         <z>-1</z>
       </axis>
       <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>switch2</object-name>
        <property>ja37/radar/panel/s-2</property>
        <factor>60</factor>
        <offset-deg>-30</offset-deg>
        <center>
            <x-m>  0.05034 </x-m>
            <y-m>  0.03862 </y-m>
            <z-m>  0.01559 </z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>        
        <action>
            <binding>
                <command>property-adjust</command>
                <property>ja37/radar/panel/s-2</property>
                <min>0</min>
                <max>1</max>                
                <wrap>false</wrap>
           </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>switch1</object-name>
        <property>ja37/radar/panel/s-1</property>
        <factor>60</factor>
        <offset-deg>-30</offset-deg>
        <center>
            <x-m>  -0.01499 </x-m>
            <y-m>  0.04221 </y-m>
            <z-m>  0.02296 </z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>        
        <action>
            <binding>
                <command>property-adjust</command>
                <property>ja37/radar/panel/s-1</property>
                <min>0</min>
                <max>1</max>                
                <wrap>false</wrap>
           </binding>
        </action>
    </animation>

</PropertyList>
