<?xml version="1.0"?>

<PropertyList>
  <path>radar-panel.ac</path>

  <effect>
    <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
    <object-name>base</object-name>
    <object-name>knob_mode</object-name>
    <object-name>knob_filter</object-name>
    <object-name>switch_sea</object-name>
    <object-name>switch_lin</object-name>
    <object-name>switch_pulse</object-name>
    <object-name>switch_passive</object-name>
    <object-name>button_rr</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>base</object-name>
    <condition><property>/ja37/effect/swedish-labels</property></condition>
    <texture>radar-panel-se.png</texture>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>base</object-name>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>rdpn</tooltip-id>
        <label>Radar panel</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>knob_mode</object-name>
    <property>ja37/mode/selector-ajs</property>
    <factor>30</factor>
    <center>
      <x-m>-0.071252</x-m>
      <y-m>-0.030333</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>ja37/mode/selector-ajs</property>
        <min>0</min>
        <max>6</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>mode-selector</tooltip-id>
        <label>Main mode selector</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>knob_filter</object-name>
    <property>ja37/radar/panel/filter</property>
    <factor>30</factor>
    <center>
      <x-m>0.071759</x-m>
      <y-m>-0.036265</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>ja37/radar/panel/filter</property>
        <min>0</min>
        <max>7</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>radar-filter</tooltip-id>
        <label>Radar filter mode</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>switch_sea</object-name>
    <property>ja37/radar/panel/sea</property>
    <factor>60</factor>
    <offset-deg>-30</offset-deg>
    <drag-direction>vertical</drag-direction>
    <center>
      <x-m>-0.070683</x-m>
      <y-m>0.018675</y-m>
      <z-m>0.003</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>ja37/radar/panel/sea</property>
        <min>0</min>
        <max>1</max>
        <factor>-1</factor>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>radar-sea</tooltip-id>
        <label>Doppler radar sea mode (not implemented)</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>switch_lin</object-name>
    <property>ja37/radar/panel/linear</property>
    <factor>60</factor>
    <offset-deg>-30</offset-deg>
    <drag-direction>vertical</drag-direction>
    <center>
      <x-m>-0.019003</x-m>
      <y-m>-0.012922</y-m>
      <z-m>0.003</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>ja37/radar/panel/linear</property>
        <min>0</min>
        <max>1</max>
        <factor>-1</factor>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>radar-lin</tooltip-id>
        <label>Linear radar amplification</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>switch_pulse</object-name>
    <property>ja37/radar/panel/pulse</property>
    <factor>60</factor>
    <offset-deg>-30</offset-deg>
    <drag-direction>vertical</drag-direction>
    <center>
      <x-m>-0.019003</x-m>
      <y-m>-0.040222</y-m>
      <z-m>0.003</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>ja37/radar/panel/pulse</property>
        <min>0</min>
        <max>1</max>
        <factor>-1</factor>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>radar-pulse</tooltip-id>
        <label>Radar pulse length (not implemented)</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>switch_passive</object-name>
    <property>ja37/radar/panel/passive</property>
    <factor>-60</factor>
    <offset-deg>30</offset-deg>
    <drag-direction>vertical</drag-direction>
    <center>
      <x-m>0.023597</x-m>
      <y-m>-0.040492</y-m>
      <z-m>0.003</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>ja37/radar/panel/passive</property>
        <min>0</min>
        <max>1</max>
        <factor>1</factor>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>radar-passive</tooltip-id>
        <label>Passive radar mode</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>button_rr</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-assign</command>
        <property>ja37/radar/panel/rr-button</property>
        <value>1</value>
      </binding>
      <mod-up>
        <binding>
          <command>property-assign</command>
          <property>ja37/radar/panel/rr-button</property>
          <value>0</value>
        </binding>
      </mod-up>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>radar-on</tooltip-id>
        <label>Restart radar (not implemented)</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>button_rr</object-name>
    <property>ja37/radar/panel/rr-button</property>
    <factor>0.003</factor>
    <axis>
      <z>-1</z>
    </axis>
  </animation>
</PropertyList>
