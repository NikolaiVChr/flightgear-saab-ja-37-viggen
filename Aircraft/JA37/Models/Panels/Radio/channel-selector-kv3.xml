<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

    <path>channel-selector-kv3.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>panel</object-name>
        <object-name>del</object-name>
        <object-name>avb</object-name>
        <object-name>sam</object-name>
        <object-name>fi</object-name>
        <object-name>lbv</object-name>
        <object-name>vao</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-light</inherits-from>
        <object-name>digit1</object-name>
        <object-name>digit10</object-name>
        <object-name>digit100</object-name>
        <object-name>digit1000</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>digit1</object-name>
        <object-name>digit10</object-name>
        <object-name>digit100</object-name>
        <object-name>digit1000</object-name>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
            <factor-prop>controls/lighting/fr29-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>panel</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>kv3</tooltip-id>
                <label>KV3 Fighter link channel selector</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>digit1</object-name>
        <property>instrumentation/kv3/digit[3]</property>
        <factor>0.083333</factor>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>digit10</object-name>
        <property>instrumentation/kv3/digit[2]</property>
        <factor>0.083333</factor>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>digit100</object-name>
        <property>instrumentation/kv3/digit[1]</property>
        <factor>0.083333</factor>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>digit1000</object-name>
        <property>instrumentation/kv3/digit[0]</property>
        <factor>0.083333</factor>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>del</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/kv3/button-del</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>instrumentation/kv3/button-del</property>
                    <value>0</value>
                </binding>
            </mod-up>
            <binding>
                <command>nasal</command>
                <script>freq_sel.kv3_clear();</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>del</tooltip-id>
                <label>Clear and input fighter link channel</label>
            </binding>
        </hovered>
    </animation>
    <animation>
       <type>translate</type>
       <object-name>del</object-name>
       <property>instrumentation/kv3/button-del</property>
       <factor>0.005</factor>
       <offset-m>0</offset-m>
       <axis>
         <z>-1</z>
       </axis>
       <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
