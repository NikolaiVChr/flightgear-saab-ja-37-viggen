<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>

    <path>transponder.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>panel</object-name>
        <object-name>panel_back</object-name>
        <object-name>ident</object-name>
        <!--<object-name>lampRespond</object-name>
        <object-name>lampErr</object-name>-->
        <object-name>test</object-name>
        <object-name>switchMode</object-name>
        <object-name>switchEnable</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-light</inherits-from>
        <object-name>digit1</object-name>
        <object-name>digit10</object-name>
        <object-name>digit100</object-name>
        <object-name>digit1000</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>panel</object-name>
        <condition><property>/ja37/effect/swedish-labels</property></condition>
        <texture>transponder-se.png</texture>
    </animation>

    <params>
        <digit0>instrumentation/transponder/inputs/digit[0]</digit0>
        <digit1>instrumentation/transponder/inputs/digit[1]</digit1>
        <digit2>instrumentation/transponder/inputs/digit[2]</digit2>
        <digit3>instrumentation/transponder/inputs/digit[3]</digit3>
    </params>

    <animation>
        <type>pick</type>
        <object-name>panel</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>trs</tooltip-id>
                <label>Transponder</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>material</type>
        <object-name>digit1</object-name>
        <object-name>digit10</object-name>
        <object-name>digit100</object-name>
        <object-name>digit1000</object-name>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
            <factor-prop>controls/lighting/fr29-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>digit1</object-name>
        <property alias="../../params/digit0"/>
        <factor>0.083333</factor>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>digit10</object-name>
        <property alias="../../params/digit1"/>
        <factor>0.083333</factor>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>digit100</object-name>
        <property alias="../../params/digit2"/>
        <factor>0.083333</factor>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>digit1000</object-name>
        <property alias="../../params/digit3"/>
        <factor>0.083333</factor>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>digit1</object-name>
        <drag-direction>vertical</drag-direction>
        <action>
            <binding>
                <command>property-adjust</command>
                <property alias="../../../../params/digit0"/>
                <min>0</min>
                <max>8</max>
                <wrap>true</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>tr_code</tooltip-id>
                <label>Transponder code</label>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>digit10</object-name>
        <drag-direction>vertical</drag-direction>
        <action>
            <binding>
                <command>property-adjust</command>
                <property alias="../../../../params/digit1"/>
                <min>0</min>
                <max>8</max>
                <wrap>true</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>tr_code</tooltip-id>
                <label>Transponder code</label>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>digit100</object-name>
        <drag-direction>vertical</drag-direction>
        <action>
            <binding>
                <command>property-adjust</command>
                <property alias="../../../../params/digit2"/>
                <min>0</min>
                <max>8</max>
                <wrap>true</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>tr_code</tooltip-id>
                <label>Transponder code</label>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>digit1000</object-name>
        <drag-direction>vertical</drag-direction>
        <action>
            <binding>
                <command>property-adjust</command>
                <property alias="../../../../params/digit3"/>
                <min>0</min>
                <max>8</max>
                <wrap>true</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>tr_code</tooltip-id>
                <label>Transponder code</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>switchEnableTop</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/transponder/switch-power</property>
                <value>1</value>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>transponder-enable-btn</tooltip-id>
                <label>Power</label>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>switchEnableBot</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/transponder/switch-power</property>
                <value>0</value>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>transponder-enable-btn</tooltip-id>
                <label>Power</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>switchEnable</object-name>
        <property>/instrumentation/transponder/switch-power</property>
        <factor>90</factor>
        <offset-deg>-45</offset-deg>
        <center>
            <z-m>  0.007028 </z-m>
            <y-m> -0.038577 </y-m>
            <x-m> -0.000602 </x-m>
        </center>
        <axis>
            <x>  0 </x>
            <y> -1 </y>
            <z>  0 </z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>switchModeTop</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/transponder/switch-mode</property>
                <value>1</value>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>transponder-mode-btn</tooltip-id>
                <label>Mode</label>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>switchModeBot</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/transponder/switch-mode</property>
                <value>0</value>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>transponder-mode-btn</tooltip-id>
                <label>Mode</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>switchMode</object-name>
        <property>/instrumentation/transponder/switch-mode</property>
        <factor>90</factor>
        <offset-deg>-45</offset-deg>
        <center>
            <z-m>  0.007028 </z-m>
            <y-m>  0.062832 </y-m>
            <x-m> -0.000602 </x-m>
        </center>
        <axis>
            <x>  0 </x>
            <y> -1 </y>
            <z>  0 </z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>test_pick</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/transponder/inputs/test</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>/instrumentation/transponder/inputs/test</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>transponder-test</tooltip-id>
                <label>Test transponder</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>test</object-name>
        <property>/instrumentation/transponder/inputs/test</property>
        <factor> 0.0013 </factor>
        <axis>
            <x> 0 </x>
            <y> 0 </y>
            <z> -1 </z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>ident_pick</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/transponder/inputs/ident-btn</property>
                <value type="bool">true</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>/instrumentation/transponder/inputs/ident-btn</property>
                    <value type="bool">false</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>transponder-ident</tooltip-id>
                <label>Identify to ATC</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>ident</object-name>
        <property>/instrumentation/transponder/inputs/ident-btn</property>
        <factor> 0.0013 </factor>
        <axis>
            <x> 0 </x>
            <y> 0 </y>
            <z> -1 </z>
        </axis>
    </animation>

    <animation>
        <type>material</type>
        <object-name>lampRespond</object-name>
        <condition>
            <property>instrumentation/transponder/ident</property>
            <property>ja37/elec/ac-bus-main-bool</property>
        </condition>
        <emission>
            <red>   1.00 </red>
            <green> 1.00 </green>
            <blue>  1.00 </blue>
        </emission>
    </animation>

</PropertyList>
