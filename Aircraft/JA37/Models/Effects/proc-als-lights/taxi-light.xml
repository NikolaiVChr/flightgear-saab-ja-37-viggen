<?xml version="1.0"?>

<PropertyList>
  <path>Models/Effects/procedural_light.ac</path>

  <effect>
    <inherits-from>Aircraft/JA37/Models/Effects/proc-als-lights/taxi-light</inherits-from>
    <object-name>procedural_light</object-name>
  </effect>

  <light>
    <name>taxi_light</name>
    <type>spot</type>
    <priority>high</priority>
    <position>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </position>
    <direction>
      <x>-1</x>
      <y>0</y>
      <z>-0.02</z>
    </direction>
    <ambient>
      <r>0.0</r>
      <g>0.0</g>
      <b>0.0</b>
      <a>1</a>
    </ambient>
    <diffuse>
      <r>1.0</r>
      <g>1.0</g>
      <b>0.8</b>
      <a>1</a>
    </diffuse>
    <specular>
      <r>1.0</r>
      <g>1.0</g>
      <b>0.8</b>
      <a>1</a>
    </specular>
    <attenuation>
      <c>0.1</c>
      <l>0.003</l>
      <q>0.0001</q>
    </attenuation>
    <spot-cutoff>40</spot-cutoff>
    <spot-exponent>15</spot-exponent><!-- Lose half intensity at 17deg -->
    <range-m>150</range-m>
  </light>

  <!-- Hide in internal view when retracting, otherwise it illuminates the dashboard -->
  <animation>
    <type>select</type>
    <object-name>taxi_light</object-name>
    <condition>
      <or>
        <!-- Since this is a relative path, it should hide it for our aircraft, but not MP models. -->
        <not><property>sim/current-view/internal</property></not>
        <equals>
          <property>gear/gear[0]/position-norm</property>
          <value>1</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>procedural_light</object-name>
    <object-name>taxi_light</object-name>
    <condition>
      <property>ja37/effect/taxi-light</property>
    </condition>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>procedural_light</object-name>
    <x-offset>4</x-offset>
    <y-offset>4</y-offset>
    <z-offset>4</z-offset>
  </animation>

  <animation>
    <type>dist-scale</type>
    <object-name>procedural_light</object-name>
    <interpolation>
      <entry><ind>0</ind><dep>0.25</dep></entry>
      <entry><ind>2000</ind><dep>2.0</dep></entry>
    </interpolation>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>procedural_light</object-name>
  </animation>
</PropertyList>
