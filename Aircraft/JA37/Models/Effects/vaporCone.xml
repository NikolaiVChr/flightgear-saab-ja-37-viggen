<?xml version="1.0"?>

<PropertyList>

  <path>vaporCone.ac</path>
  <nopreview/>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>vaporCone</object-name>
  </effect>

  <animation>
    <type>noshadow</type>
    <condition>
      <equals>
        <property>/sim/rendering/rembrandt/enabled</property>
        <value>1</value>
      </equals>
    </condition>
    <object-name>vaporCone</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>vaporCone</object-name>
    <condition>
      <and>
        <greater-than>
          <property>sim/multiplay/generic/float[7]</property><!-- /velocities/mach -->
          <value>0.97</value>
        </greater-than>
        <less-than>
          <property>sim/multiplay/generic/float[7]</property><!-- /velocities/mach -->
          <value>1.05</value>
        </less-than>
        <less-than>
          <property>sim/multiplay/generic/float[6]</property><!-- /position/altitude-ft -->
          <value>5000.0</value>
        </less-than>
      </and>
    </condition>
  </animation>

  <!--<animation>
    <type>textranslate</type>
    <object-name>vaporCone</object-name>
    <property>/velocities/mach</property>
    <factor>5</factor>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>-->

</PropertyList>