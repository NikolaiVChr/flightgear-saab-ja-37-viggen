	<!--
	**********************************
	TILS Knob
	**********************************
	-->

	<animation>
        <type>knob</type>
        <object-name>A2_disc_UV_mapped_TILS</object-name>
		<object-name>A2_handle</object-name>
		<object-name>A2_screw</object-name>
		<property>/sim/ja37/navigation/tils-knob</property>
		<factor>30</factor>
		<center>
			<x-m>  0.04897 </x-m>
			<y-m>  0.00000 </y-m>
			<z-m>  0.00000 </z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/sim/ja37/navigation/tils-knob</property>
				<min>0</min>
				<max>10</max>        
                <wrap>false</wrap>
           </binding>
        </action>
    </animation>
	
</PropertyList>
