<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

    <path>radio.ac</path>
	
    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>Mount</object-name>
    </effect>
	
	<animation>
        <type>material</type>
        <object-name>1sFreq</object-name>
		<object-name>10sFreq</object-name>
		<object-name>100sFreq</object-name>
		<object-name>1000sFreq</object-name>
		<object-name>10000sFreq</object-name>
		<object-name>100000sFreq</object-name>
		<object-name>1sRad</object-name>
		<object-name>10sRad</object-name>
		<object-name>100sRad</object-name>
		<object-name>decimalFreq</object-name>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

	<!-- switches -->
	
	<animation>
		<type>pick</type>
		<object-name>switchLeft</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/radio/switches/com-nav</property>
			</binding>
			<binding>
                <command>nasal</command>
                <script>ja37.click()</script>
            </binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>switchRight</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/radio/switches/mhz-khz</property>
			</binding>
			<binding>
                <command>nasal</command>
                <script>ja37.click()</script>
            </binding>
		</action>
	</animation>
	
    <animation>
        <type>rotate</type>
        <object-name>switchLeft</object-name>
        <property>instrumentation/radio/switches/com-nav</property>
        <factor>70</factor>
        <offset-deg>-35</offset-deg>
        <center>
<!--0.0111174 -0.0360405 0.0213720-->
            <x-m> 0.011 </x-m>
            <y-m>-0.021 </y-m>
            <z-m> 0.000 </z-m>
        </center>
        <axis>
            <x> 0.0 </x>
            <y> 0.0 </y>
            <z> 1.0 </z>
        </axis>
    </animation>
	
    <animation>
        <type>rotate</type>
        <object-name>switchRight</object-name>
        <property>instrumentation/radio/switches/mhz-khz</property>
        <factor>70</factor>
        <offset-deg>-35</offset-deg>
        <center>
            <x-m> 0.011 </x-m>
            <y-m> 0.021 </y-m>
            <z-m> 0.000 </z-m>
        </center>
        <axis>
            <x> 0.0 </x>
            <y> 0.0 </y>
            <z> 1.0 </z>
        </axis>
    </animation>
	
	<!-- knobs -->

	<!-- left big knob -->
    <animation>
        <type>knob</type>
        <object-name>leftMacroKnob</object-name>
        <action>
			<!-- binding for if knob is on comms -->
			<binding>
				<condition>
					<and>
						<equals>
							<property>instrumentation/radio/switches/com-nav</property>
							<value>0</value>
						</equals>
						<equals>
							<property>instrumentation/radio/switches/mhz-khz</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/comm/frequencies/selected-mhz</property>
				<min>118</min>
				<max>137</max>
				<wrap>true</wrap>
			</binding>
            <!-- binding for if knob is on vor/ils/dme nav -->
			<binding>
				<condition>
					<and>
						<equals>
							<property>instrumentation/radio/switches/com-nav</property>
							<value>1</value>
						</equals>
						<equals>
							<property>instrumentation/radio/switches/mhz-khz</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/nav/frequencies/selected-mhz</property>
				<min>100</min>
				<max>118</max>
				<wrap>true</wrap>
			</binding>
			<!-- binding for if knob is on adf -->
			<binding>
				<condition>
					<and>
						<equals>
							<property>instrumentation/radio/switches/com-nav</property>
							<value>1</value>
						</equals>
						<equals>
							<property>instrumentation/radio/switches/mhz-khz</property>
							<value>1</value>
						</equals>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/adf/frequencies/selected-khz</property>
				<min>100</min>
				<max>500</max>
				<wrap>true</wrap>
			</binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>leftMacroKnob</tooltip-id>
                <label>Adjust frequency (gross)</label>
            </binding>
        </hovered>
    </animation>

	<!-- left little knob -->
	<animation>
		<type>knob</type>
		<object-name>leftMicroKnob</object-name>
		<action>
			<!-- binding for if knob is on comms -->
			<binding>
				<condition>
					<and>
						<equals>
							<property>instrumentation/radio/switches/com-nav</property>
							<value>0</value>
						</equals>
						<equals>
							<property>instrumentation/radio/switches/mhz-khz</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/comm/frequencies/selected-mhz</property>
				<factor>.01</factor>
				<min>118</min>
				<max>137</max>
				<wrap>true</wrap>
			</binding>
			<!-- binding for if knob is on vor/ils/dme nav -->
			<binding>
				<condition>
					<and>
						<equals>
							<property>instrumentation/radio/switches/com-nav</property>
							<value>1</value>
						</equals>
						<equals>
							<property>instrumentation/radio/switches/mhz-khz</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/nav/frequencies/selected-mhz</property>
				<factor>.01</factor>
				<min>100</min>
				<max>118</max>
				<wrap>true</wrap>
			</binding>
			<!-- binding for if knob is on adf -->
			<binding>
				<condition>
					<and>
						<equals>
							<property>instrumentation/radio/switches/com-nav</property>
							<value>1</value>
						</equals>
						<equals>
							<property>instrumentation/radio/switches/mhz-khz</property>
							<value>1</value>
						</equals>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/adf/frequencies/selected-khz</property>
				<min>100</min>
				<max>500</max>
				<wrap>true</wrap>
			</binding>
		</action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>leftMicroKnob</tooltip-id>
                <label>Adjust frequency (fine)</label>
            </binding>
        </hovered>
	</animation>
	
	<!-- right big knob -->
	<animation>
		<type>knob</type>
		<object-name>rightMacroKnob</object-name>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav/radials/selected-deg</property>
				<min>0</min>
				<max>359</max>
				<wrap>true</wrap>
			</binding>
		</action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>rightMacroKnob</tooltip-id>
                <label>Adjust radial</label>
            </binding>
        </hovered>
	</animation>
	
	<!-- right little knob -->
	<animation>
		<type>knob</type>
		<object-name>rightMicroKnob</object-name>
		<action>
			<!-- binding for if knob is on comms -->
			<binding>
				<condition>
					<and>
						<equals>
							<property>instrumentation/radio/switches/com-nav</property>
							<value>0</value>
						</equals>
						<equals>
							<property>instrumentation/radio/switches/mhz-khz</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/comm/volume</property>
				<factor>.05</factor>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
			<!-- binding for if knob is on vor/ils/dme nav -->
			<binding>
				<condition>
					<and>
						<equals>
							<property>instrumentation/radio/switches/com-nav</property>
							<value>1</value>
						</equals>
						<equals>
							<property>instrumentation/radio/switches/mhz-khz</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/nav/volume</property>
				<factor>.05</factor>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
			<!-- binding for if knob is on adf -->
			<binding>
				<condition>
					<and>
						<equals>
							<property>instrumentation/radio/switches/com-nav</property>
							<value>1</value>
						</equals>
						<equals>
							<property>instrumentation/radio/switches/mhz-khz</property>
							<value>1</value>
						</equals>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/adf/volume-norm</property>
				<factor>.05</factor>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>rightMicroKnob</tooltip-id>
                <label>Adjust volume</label>
            </binding>
        </hovered>
	</animation>
	
	<!-- displays -->
	<!-- freq display -->
	<animation>
		<type>textranslate</type>
		<object-name>100000sFreq</object-name>
		<property>instrumentation/radio/display-freq</property>
		<bias>.000001</bias>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
		<x>1</x>
		<y>0</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>10000sFreq</object-name>
		<property>instrumentation/radio/display-freq</property>
		<bias>.000001</bias>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>1000sFreq</object-name>
		<property>instrumentation/radio/display-freq</property>
		<bias>.000001</bias>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>100sFreq</object-name>
		<property>instrumentation/radio/display-freq</property>
		<bias>.000001</bias>
		<factor>1.0</factor>
		<step>0.1</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>10sFreq</object-name>
		<property>instrumentation/radio/display-freq</property>
		<bias>.000001</bias>
		<factor>10.0</factor>
		<step>0.01</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>1sFreq</object-name>
		<property>instrumentation/radio/display-freq</property>
		<bias>.000001</bias>
		<factor>100</factor>
		<step>.001</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
	
	<!-- radial display -->
	
	<animation>
		<type>textranslate</type>
		<object-name>100sRad</object-name>
		<property>instrumentation/nav/radials/selected-deg</property>
		<bias>.000001</bias>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>10sRad</object-name>
		<property>instrumentation/nav/radials/selected-deg</property>
		<bias>.000001</bias>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>1sRad</object-name>
		<property>instrumentation/nav/radials/selected-deg</property>
		<bias>.000001</bias>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
	
	<!-- tooltips -->
	
    <animation>
        <type>pick</type>
        <object-name>switchLeft</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>switchLeft</tooltip-id>
                <label>Toggle comm/nav</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>switchRight</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>switchRight</tooltip-id>
                <label>Toggle freq. band</label>
            </binding>
        </hovered>
    </animation>
	
</PropertyList>
