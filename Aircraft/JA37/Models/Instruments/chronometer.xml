<?xml version="1.0"?>

<PropertyList>

  <path>chronometer.ac</path> 

      <effect>
            <inherits-from>Effects/model-transparent</inherits-from>
            <object-name>CH_Glass</object-name>
      </effect>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>30</max-m>
	</animation>

	<animation>
		<type>material</type>
		<object-name>CH_Backplate</object-name>
		<object-name>CH_Secplate</object-name>
		<object-name>CH_Infplate</object-name>
		<object-name>CH_Daysdisk</object-name>
		<object-name>CH_NSeconds</object-name>
		<object-name>CH_SecSeconds</object-name>
		<object-name>CH_NMinutes</object-name>
		<object-name>CH_NInfMinutes</object-name>
		<object-name>CH_NHours</object-name>
		<object-name>CH_NInfHours</object-name>
  		<emission>
			<factor-prop>systems/electrical-real/volts-norm</factor-prop>
			<red>0.222</red>
			<green>0.212</green>
			<blue>0.212</blue>
		</emission>
		<condition>
			<not><equals>
				<property>systems/light/use-canopy-lamps</property>
				<value>1</value>
			</equals></not>
		</condition>
	</animation>

  <animation>
    <type>rotate</type>
    <object-name>CH_NHours</object-name>
    <property>instrumentation/clock/indicated-sec</property>
    <factor>0.008333333</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>CH_NMinutes</object-name>
    <property>instrumentation/clock/indicated-sec</property>
    <factor>0.1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>CH_NSeconds</object-name>
    <property>instrumentation/clock/indicated-sec</property>
    <factor>6</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
	  <type>pick</type>
	  <object-name>CH_Down</object-name>
	  <action>
	    <button>0</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
	       <command>property-adjust</command>
	       <property>instrumentation/clock/offset-sec</property>
	       <step>-60</step>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	  <action>
	    <button>1</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
  	     <command>property-adjust</command>
	       <property>instrumentation/clock/offset-sec</property>
	       <step>-1</step>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	</animation>

  <animation>
	  <type>pick</type>
	  <object-name>CH_Up</object-name>
	  <action>
	    <button>0</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
	       <command>property-adjust</command>
	       <property>instrumentation/clock/offset-sec</property>
	       <step>60</step>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	  <action>
	    <button>1</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
  	     <command>property-adjust</command>
	       <property>instrumentation/clock/offset-sec</property>
	       <step></step>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	</animation>

  <animation>
	  <type>pick</type>
	  <object-name>CH_Onoff</object-name>
	  <action>
	    <button>0</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
	       <command>property-adjust</command>
	       <property>instrumentation/clock/sec_set</property>
	       <step>1</step>
	       <min>0</min>
	       <max>1</max>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	  <action>
	    <button>1</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
  	     <command>property-adjust</command>
	       <property>instrumentation/clock/sec_set</property>
	       <step>1</step>
	       <min>0</min>
	       <max>1</max>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	</animation>

  <animation>
    <type>rotate</type>
    <object-name>CH_NSecseconds</object-name>
    <property>instrumentation/clock/sec_show</property>
    <factor>6</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>-0.021</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>CH_NInfHours</object-name>
    <property>instrumentation/clock/inf_sec</property>
    <factor>0.008333333</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0.020</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>CH_NInfMinutes</object-name>
    <property>instrumentation/clock/inf_sec</property>
    <factor>0.1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0.020</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
	  <type>pick</type>
	  <object-name>CH_InfDown</object-name>
	  <action>
	    <button>0</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
	       <command>property-adjust</command>
	       <property>instrumentation/clock/inf_sec</property>
	       <step>-60</step>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	  <action>
	    <button>1</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
  	     <command>property-adjust</command>
	       <property>instrumentation/clock/inf_sec</property>
	       <step>-1</step>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	</animation>

  <animation>
	  <type>pick</type>
	  <object-name>CH_InfUp</object-name>
	  <action>
	    <button>0</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
	       <command>property-adjust</command>
	       <property>instrumentation/clock/inf_sec</property>
	       <step>60</step>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	  <action>
	    <button>1</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
  	     <command>property-adjust</command>
	       <property>instrumentation/clock/inf_sec</property>
	       <step></step>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	</animation>

  <animation>
	  <type>pick</type>
	  <object-name>CH_InfOnoff</object-name>
	  <action>
	    <button>0</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
	       <command>property-adjust</command>
	       <property>instrumentation/clock/inf_set</property>
	       <step>1</step>
	       <min>0</min>
	       <max>1</max>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	  <action>
	    <button>1</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
  	     <command>property-adjust</command>
	       <property>instrumentation/clock/inf_set</property>
	       <step>1</step>
	       <min>0</min>
	       <max>1</max>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	</animation>

  <animation>
    <type>rotate</type>
    <object-name>CH_Daysdisk</object-name>
    <property>instrumentation/clock/inf_days</property>
    <factor>36</factor>
    <center>
      <x-m>-0.006543</x-m>
      <y-m>0</y-m>
      <z-m>0.016318</z-m>
    </center>  
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList> 
