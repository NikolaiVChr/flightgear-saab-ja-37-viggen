<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

    <path>me799.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>panel</object-name>
        <object-name>button</object-name>
        <object-name>marker1</object-name>
        <object-name>handle1</object-name>
        <object-name>disc1</object-name>
        <object-name>screw1</object-name>
        <object-name>marker2</object-name>
        <object-name>handle2</object-name>
        <object-name>disc2</object-name>
        <object-name>screw2</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>panel</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>me799</tooltip-id>
                <label>IK PN799 identification transponder</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>handle1</object-name>
        <object-name>disc1</object-name>
        <object-name>screw1</object-name>
        <property>ja37/radio/me799/knob-1</property>
        <factor>-30</factor>
        <offset-deg>30</offset-deg>
        <center>
            <x-m>  0.00107 </x-m>
            <y-m>  -0.02767 </y-m>
            <z-m>  0 </z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>        
        <increase>
            <binding>
                <command>property-adjust</command>
                <property>ja37/radio/me799/knob-1</property>
                <factor>1</factor>
                <step>1</step>
                <min>1</min>
                <max>11</max>                
                <wrap>false</wrap>
           </binding>
        </increase>
        <decrease>
            <binding>
                <command>property-adjust</command>
                <property>ja37/radio/me799/knob-1</property>
                <factor>1</factor>
                <step>-1</step>
                <min>1</min>
                <max>11</max>                
                <wrap>false</wrap>
            </binding>
        </decrease>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>qc</tooltip-id>
                <label>Query code</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>handle2</object-name>
        <object-name>disc2</object-name>
        <object-name>screw2</object-name>
        <property>ja37/radio/me799/knob-2</property>
        <factor>-30</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>  0.00107 </x-m>
            <y-m>  0.03218 </y-m>
            <z-m>  0 </z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>        
        <increase>
            <binding>
                <command>property-adjust</command>
                <property>ja37/radio/me799/knob-2</property>
                <factor>1</factor>
                <step>1</step>
                <min>0</min>
                <max>2</max>                
                <wrap>false</wrap>
           </binding>
        </increase>
        <decrease>
            <binding>
                <command>property-adjust</command>
                <property>ja37/radio/me799/knob-2</property>
                <factor>1</factor>
                <step>-1</step>
                <min>0</min>
                <max>2</max>                
                <wrap>false</wrap>
            </binding>
        </decrease>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>qc</tooltip-id>
                <label>Mode</label>
            </binding>
        </hovered>
    </animation>

	<animation>
        <type>pick</type>
        <object-name>button</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>ja37/radio/me799/button</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>ja37/radio/me799/button</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>
	<animation>
	   <type>translate</type>
	   <object-name>button</object-name>
	   <property>ja37/radio/me799/button</property>
	   <factor>0.005</factor>
	   <offset-m>0</offset-m>
	   <axis>
	     <z>-1</z>
	   </axis>
	   <center>
	        <x-m>0</x-m>
	        <y-m>0</y-m>
	        <z-m>0</z-m>
	    </center>
	</animation>


</PropertyList>
